generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  passwordHash   String?  // Optional if using strictly OAuth
  isAdmin        Boolean  @default(false)
  
  // Twitter Data
  twitterId      String?  @unique
  username       String?
  accessToken    String?
  refreshToken   String?
  tokenExpiresAt DateTime?
  isVerified     Boolean  @default(false)
  
  // Settings
  niche          String?
  goal           String?
  region         String?  // For time zone and fallback posting times
  
  // Subscription
  isPro          Boolean  @default(false)
  generationCount Int      @default(0)
  stripeCustomerId String?
  subscriptionEnd DateTime?
  
  // Gamification
  currentStreak  Int      @default(0)
  longestStreak  Int      @default(0)
  lastPostDate   DateTime?
  
  // Growth Metrics
  followerCount     Int      @default(0)
  previousFollowerCount Int  @default(0)
  lastMetricsUpdate DateTime?
  
  // Preferences
  customTone     String?  // User's custom writing style instructions
  
  // Profile Data
  profileImageUrl String?
  bio            String?
  lastAuditDate  DateTime?
  auditData      String?  // JSON string of analysis results
  
  boards         Board[]
  followerHistory FollowerHistory[]
  promotions      Promotion[]
  transactions    Transaction[]
  notifications  Notification[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model FollowerHistory {
  id        String   @id @default(cuid())
  userId    String
  count     Int
  date      DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, date])
}

model Promotion {
  id        String   @id @default(cuid())
  userId    String
  tagline   String
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Board {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  title       String
  objective   String
  strategy    String   // Educational, Commentary, etc.
  frequency   String   @default("daily")
  customPrompt String?  // User's custom instructions for this board
  
  tweets      Tweet[]
  createdAt   DateTime @default(now())
}

model Tweet {
  id             String   @id @default(uuid())
  boardId        String
  board          Board    @relation(fields: [boardId], references: [id])
  
  content        String
  rationale      String?
  
  scheduledDate  DateTime // The "daily" slot
  status         String   @default("PENDING") // PENDING, POSTED, MISSED
  
  // Verification
  postedTweetId  String?  // If we detect it happened
  postedAt       DateTime?
  
  createdAt      DateTime @default(now())
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String   // REMINDER, SUGGESTION
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Transaction {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  reference String   @unique
  amount    Int      // In kobo/cents
  status    String   // SUCCESS, PENDING, FAILED
  createdAt DateTime @default(now())
}
